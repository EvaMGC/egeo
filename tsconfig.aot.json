{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "baseUrl": "./web",
      "paths": {
         "egeo": [
            "../components"
         ]
      }
   },
   "exclude": [
      "node_modules",
      "coverage",
      "config",
      "report",
      "dist"
   ],
   "include": [
      "web/**/*.ts"
   ],
   "angularCompilerOptions": {
      "genDir": "./compiled",
      "skipMetadataEmit": true
   },
   "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true
   },
   "compileOnSave": false,
   "buildOnSave": false,
   "atom": {
      "rewriteTsconfig": false
   }
}
