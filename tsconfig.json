{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "skipLibCheck": true
   },

   "exclude": [
      "node_modules",
      "coverage",
      "config",
      "report",
      "dist"
   ],
   "include": [
      "web/**/*.ts"
   ],
   "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true
   },
   "compileOnSave": false,
   "buildOnSave": false,
   "atom": { "rewriteTsconfig": false }
}
