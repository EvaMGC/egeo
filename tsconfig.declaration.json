{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "./",
      "outDir": "bundle",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "skipLibCheck": true
   },

   "exclude": [
      "node_modules",
      "coverage",
      "config",
      "report",
      "dist",
      "bundle",
      "web"
   ],
   "compileOnSave": false,
   "buildOnSave": false,
   "atom": { "rewriteTsconfig": false }
}
